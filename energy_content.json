{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "height":500,
    "width":1200,

    "vconcat":[
        {
            "height":250,
            "width":1280,
            "title": "Fuel types compared with coal",
            "data":{
                "url":"data/fuel_compared_with_coal.csv"
            },
            "transform":[
                {
                    "calculate": "(datum['Value']+100)*100",
                    "as": "LogValue"
                },
                {
                    "filter": "datum.Category != 'Energy (MJ/$USD)'"
                }
            ],
            "layer":[
                
                {
                    "transform": [
                        {
                            "calculate": "datum.Value * 100",
                            "as": "Percentage"
                        }
                    ],                    
                    "encoding": {
                        "x":{
                            "field": "Category",
                            "type": "nominal"
                        },
                        "y":{
                            "field": "LogValue",
                            "type": "quantitative",
                            "title": "Percentage in relation to coal",
                            "axis":{
                                "tickCount": 5
                            },
                            "scale":{
                                "type": "log"
                            }
                        },
                        "color":{
                            "field": "Fuel",
                            "type": "ordinal",
                            "scale": {
                                "domain": [
                                    "Natural gas",                                        
                                    "Crude oil",                                            
                                    "Natural uranium"
                                ],
                                "range":[                                            
                                    "#29D2E6",
                                    "#D641E6",
                                    "#0EE63D"                                            
                                ]
                            }
                        }
                        
                    },
                    "layer":[
                        {
                            "mark": {
                                "type": "line"
                            },
                            "encoding": {
                                "color": {
                                    "field": "Fuel"
                                }
                            }                          
                        },
                        {
                            "mark":{
                                "type": "circle",
                                "size": 250
                            },
                            "encoding": {
                                "tooltip":[
                                    {
                                        "field":"Fuel",
                                        "type": "nominal"
                                    },
                                    {
                                        "field":"Category",
                                        "type": "nominal",
                                        "title": "Category"
                                    },
                                    {
                                        "field":"Percentage",
                                        "type": "quantitative",
                                        "format": ",.2f",
                                        "title": "Percentage of coal (%)"
                                    }
                                ]
                            }
                        }
                    ]
                    
                },
                {
                    "mark": {
                        "type": "rule",
                        "opacity": 0.2
                    },                    
                    "encoding": {
                        "x":{
                            "field": "Category",
                            "type": "nominal"
                        },
                        "y":{"datum":10000000},
                        "size": {
                            "value": 0.5
                        }
                    }
                }
                
            ]
            
        }
    ]
}