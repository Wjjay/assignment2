{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "height":150,
    "width":1280,
    "title": {
        "text": "Australian electricity consumption by sector"
    },
    "data":{
        "url": "data/energy_by_sector.csv"
    },
    "params": [
        {
            "name": "sectorSelect",
            "value": null,
            "bind":{
                "input": "select",
                "options": [
                    null,
                    "Transport",
                    "Electricity Supply",
                    "Manufacturing",
                    "Mining",
                    "Residential",
                    "Commercial",
                    "Other"
                ],
                "labels": [
                    "All",
                    "Transport",
                    "Electricity Supply",
                    "Manufacturing",
                    "Mining",
                    "Residential",
                    "Commercial",
                    "Other"
                ],
                "name": "Sector Select: "            
            }
        }
    ],
    "transform": [
        {
            "filter": "datum.Year >= 1999"
        },
        {
            "filter": "sectorSelect == null || datum.Sector == sectorSelect"
        }
    ],
    "mark": "bar",
    "encoding": {
        "x": {
            "field": "Year",
            "type": "quantitative",
            "axis": {
                "tickCount": 20, 
                "format": ""
            }                    
        },
        "y": {
            "field":"Energy",
            "aggregate": "sum",
            "type": "quantitative",
            "title": "Electricity (PJ)"
        },
        "color": {
            "field": "Sector",
            "type": "nominal",
            "scale":{
                "domain":[
                    "Transport",
                    "Electricity Supply",
                    "Manufacturing",
                    "Mining",
                    "Residential",
                    "Commercial",
                    "Other"
                ],
                "range": [
                    "#41FAC5",
                    "#FA0A01",
                    "#F4F216",
                    "#DEB810",
                    "#75F46C",
                    "#35CAFB",
                    "#B935FB"
                ]
            }
        },
        "tooltip":[
            {
                "field": "Year"
            },
            {
                "field": "Sector"
            },
            {
                "field": "Energy",
                "type": "quantitative",
                "format": ",",
                "title": "Electricity (Petajoules)"
            }
        ]
    }
    
}