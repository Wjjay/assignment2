{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": { "text": "Total CO2 Emissions" },
    "width":1920,
    "height":1080,
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/KaneSec/vega_lite/main/0_students_questions/data/summed_by_country_acc.csv"
            },
            "mark": "line",
            "encoding":{
                "x": {
                    "field":"Year",
                    "type": "quantitative",
                    "scale":{
                        "domain": [1960, 2018]
                    },
                    "axis": {"tickCount": 20, "format": ""}
                },
                "y":{
                    "field": "CO2 Emission",
                    "type": "quantitative"
                },
                "color":{
                    "field":"Country Name",
                    "type": "nominal"
                },
                "tooltip": [
                    {
                        "field": "Country Name",
                        "type": "nominal",
                        "title": "Country"
                    },
                    {
                        "field": "CO2 Emission",
                        "type": "ordinal",
                        "title": "CO2 Emissions (metric tonnes)"
                    }
                ]
            },
            "transform": [
                {"filter":"datum['Country Name']=='All' || datum['Country Name']=='United States'"},
                {"filter": "datum.Year >= 1960"},
                {"filter": "datum.Year <= 2018"}
            ]
        }
    ]
            
        
    
    
}