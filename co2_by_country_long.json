{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": { "text": "CO2 Emission per capita" },
    "width":1920,
    "height":1080,
    "projection": {"type": "equalEarth"},
    "params": [
        {
            "name": "year",
            "value": 1960,
            "bind": {
                "input": "range",
                "min": 1960,
                "max": 2018,
                "step": 1,
                "name": "Year: "
            }
        }
    ],
    "layer": [
        {
            "name": "defaultMap",
            "transform": [
                {
                    "calculate": "'No value'",
                    "as": "emission"
                }
            ],
            "data": {
                "url": "data/world_map_topo.json",
                "format": { 
                    "type": "topojson",
                    "feature": "world_map"}
            },
            "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},

            "encoding":{
                "tooltip": [
                    {
                        "field": "properties.name",
                        "type": "nominal",
                        "title": "Country"
                    },
                    {
                        "title": "CO2 Emissions (metric tonnes)",
                        "field": "emission"
                    }
                ]
            }
        },       
        

        {
            "name": "choropleth",
            "data": {
                "url": "data/co2_long.csv"
                },
            "params": [
                {
                    "name": "countrySelector",
                    "select": {
                        "type": "point"
                    }
                }
            ],
            "transform": [
                {
                    "lookup": "Country Name",
                    "from": {
                        "data": {
                            "url": "data/world_map_topo.json",
                            "format": { 
                                "type": "topojson",
                                "feature": "world_map"
                            }
                        },
                        "key": "properties.name"
                    },
                    "as": "Emissions"
                },
                {
                    "filter": "datum.Year == year"
                }
            ],
                
            "mark": {
                    "type": "geoshape",
                    "stroke": "black"
                },
                    
            "encoding": {
                "shape": {
                    "field": "Emissions",
                    "type": "geojson"
                },
                "color":{
                    "field": "CO2 Emission",
                    "type": "quantitative",
                    "title": "Emission per captia"
                },
                "fillOpacity": {
                    "condition": {"param": "countrySelector", "value": 1},
                    "value": 0.2
                  },
                "tooltip": [
                    {
                        "field": "Country Name", 
                        "type": "nominal", 
                        "title": "Country"
                    },
                    {
                        "field": "CO2 Emission",
                        "type": "quantitative",
                        "title": "CO2 Emissions (metric tonnes)",
                        "format": ".3f"
                    }
                ]
            }
        }
    ]
            
        
    
    
}