{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width":1200,
    "height":300,
    "title": "Global Uranium Production (tonnes)",
    "data": {
        "url": "data/uranium_production_new.csv"
    },
    "params": [
        {
            "name": "countrySelect",
            "value": null,
            "bind":{
                "input": "select",
                "options": [
                    null,
                    "Australia",
                    "Canada",
                    "Kazakhstan",
                    "Others"
                ],
                "labels": [
                    "All",
                    "Australia",
                    "Canada",
                    "Kazakhstan",
                    "Others"
                ],
                "name": "Country: "            
            }
        }   
    ],
    "transform": [
        {
            "filter": "countrySelect == null || datum['Country'] == countrySelect"
        }
    ],
    "mark": "area",
    "encoding": {
        "x": {
            "field": "Year",
            "type": "quantitative",
            "scale": {
                "domain": [2011, 2020]
            },
            "axis": {
                "tickCount": 9,
                "format": ""
            }
        },
        "y": {
            "field": "Uranium Produced",
            "aggregate": "sum",
            "type": "quantitative",
            "title": "Uranium Produced (metric tonnes)"
        },
        "color": {
            "field": "Country",
            "type": "nominal",
            "scale":{
                "domain": [
                    "Australia",
                    "Canada",
                    "Kazakhstan",
                    "Others"
                ]
                ,
                "range": [
                    "#5CEB1A",
                    "#DE0B58",
                    "#2815FB",
                    "#F6F5D6"
    
                ]
            }
            
        },
        "tooltip":[
            {
                "field": "Year",
                "type": "quantitative"
            },
            {
                "field":"Country",
                "type": "nominal"
            },
            {
                "field": "Uranium Produced",
                "type": "quantitative",
                "format": ","
            }
        ]        
    }    
}